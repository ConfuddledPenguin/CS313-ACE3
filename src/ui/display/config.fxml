<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ChoiceBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1">
	<Pane id="container" AnchorPane.LeftAnchor="10" AnchorPane.TopAnchor="10">
		<GridPane alignment="center" hgap="10" vgap="10">
			<padding><Insets top="15" right="236" bottom="10" left="236"/></padding>
			<Label id="title" text="Configure the Memory System" GridPane.rowIndex="0" GridPane.ColumnIndex="0" GridPane.ColumnSpan="2"></Label>
			<Label text="Number of TLB Entries:" GridPane.rowIndex="2" GridPane.ColumnIndex="0"></Label>
			<ChoiceBox fx:id="TLBSize" GridPane.rowIndex="2" GridPane.ColumnIndex="1"></ChoiceBox>
			<Label text="Number of Frames:" GridPane.rowIndex="3" GridPane.ColumnIndex="0"></Label>
			<ChoiceBox fx:id="noFrames" GridPane.rowIndex="3" GridPane.ColumnIndex="1"></ChoiceBox>
			<Label text="Replacement algorithm for the TLB:" GridPane.rowIndex="5" GridPane.ColumnIndex="0"></Label>
			<ChoiceBox fx:id="TLBAlgo" GridPane.rowIndex="5" GridPane.ColumnIndex="1"></ChoiceBox>
			<Label text="Replacement algorithm for the PageTable:" GridPane.rowIndex="6" GridPane.ColumnIndex="0"></Label>
			<ChoiceBox fx:id="PageAlgo" GridPane.rowIndex="6" GridPane.ColumnIndex="1"></ChoiceBox>
			<Label text="Input type:" GridPane.rowIndex="8" GridPane.ColumnIndex="0"></Label>
			<ChoiceBox fx:id="inputType" GridPane.rowIndex="8" GridPane.ColumnIndex="1"></ChoiceBox>
			<Button id="run-button" fx:id="run" text="Run" GridPane.rowIndex="10" GridPane.ColumnIndex="0" GridPane.ColumnSpan="2"></Button>
		</GridPane>
	</Pane>
</AnchorPane>